<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Rtastic", root_path, id: "logo" %>
      <%= link_to yield(:title), '#', id: "title" %>
      <nav>
        <ul class="nav pull-right">
          <form action="/search/" class="navbar-search pull-left">
            </i><input type="text" class="search-query" name="q" placeholder="Search">
          </form>
          <li class="dropdown">
            <% if signed_in? %>  <!--  current_user signed_in? -->
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-user icon-white"></i> <%= current_user.name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
              <!--<li><a href="#">User's name</a></li> -->
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>      
                <li><%= link_to raw('<i class="icon-off"></i> Sign out'), signout_path, method: "delete" %></li>
              <% else %>
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-user icon-white"></i> User <b class="caret"></b></a>
                <ul class="dropdown-menu">
                <li><%= link_to raw('<i class="icon-lock"></i> Sign in'), signin_path %></li>
                <li class="divider"></li>
                <li><%= link_to raw('<i class="icon-pencil"></i> Sign up'), signup_path %></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
