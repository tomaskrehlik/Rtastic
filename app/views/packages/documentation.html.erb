<% provide(:title, "#{@package.name}: Documentation") %>
<% if !@documentation.nil? then %>
    <div class=\"usage\">
    <h2>Usage</h2>
    <pre><%= @documentation.usage %></pre>
  </div>
  <div class=\"arguments\">
    <h2>Arguments</h2>
    <ul>
      <%= @documentation.arguments.html_safe %>
    </ul>
  </div>
  <div class=\"description\">
    <h2>Description</h2>
    <%= @documentation.description.html_safe %>
  </div>
  <div class=\"details\">
    <h2>Details</h2>
    <%= @documentation.details.html_safe %>
  </div>
  <pre>
    <%= @documentation.examples %>
  </pre>

















<% else %>
  <ul>
  <% functions = Documentation.where(package: @package.name) %>
  <% functions.each do |l| %>
    <%= ("<li class=\"function\"><a href=\"#{l.name}\">#{l.name}<\/a> - #{l.description}<\/li>").html_safe %>
  <% end %>
  </ul>
<% end %>
