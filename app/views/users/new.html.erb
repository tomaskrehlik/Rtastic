<% provide(:title, 'Sign up') # dont like it %>
<h1>Sign up</h1>
<div class="row">
  <div class="span4"> 	<!-- offset3 -->
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %> <!-- , class: "input-xlarge" -->

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <br />
      <%= f.submit "Create account", class: "btn btn-medium btn-primary" %>
    <% end %>
  </div>
  <div class="span4">
  	<%= render 'shared/error_messages' %>
  </div>
</div>
